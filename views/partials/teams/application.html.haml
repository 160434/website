.application
  .screenshot
    %a{ href: team.url }
      %img{ src: team.url ? 'http://pinkyurl.com/i?url=' + encodeURIComponent(team.url + '/#' + team.lastDeployedHead) + '&out-format=png&resize=160' : '/images/blank.png' }
    - if (ctx.isJudge)
      .vote
        %a.button{ href: '/teams/' + team.toParam() + '#your_vote' } Vote &raquo;
  .description
    %h2
      %a{ href: team.url }= team.application
    %h4
      by
      %a{ href: '/teams/' + team.toParam() }= team.name
    .markdown!= firstParagraph(team.description)
    - if (team.link)
      %a{ href: team.link } More info &raquo;
  .clear
