%h1 Teams

- if ('yourTeams' in ctx && ctx.yourTeams.length > 0)
  %h2
    Your Team
  - each team in ctx.yourTeams
    %ul.teams
      %li!= partial('teams/application.html.haml', { locals: { team: team } })

%h2
  Verified Teams
  = ' (' + ctx.teams.length + ')'
%ul.teams
  - each team in ctx.teams
    %li!= partial('teams/application.html.haml', { locals: { team: team } })
.clear

- if (false && 'unverifiedTeams' in ctx)
  %h2
    Pending Teams
    = ' (' + ctx.unverifiedTeams.length + ')'
  %ul
    - each team in ctx.unverifiedTeams
      %li
        %a{ href: '/teams/' + team.toParam() }= team.name
        %span.invited
          = pluralize(team.invited.length, ' oustanding invite')
