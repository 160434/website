!!! 5
html
  head
    meta( charset: 'utf-8' )
    meta( http-equiv: 'X-UA-Compatible', content: 'IE=edge,chrome=1' )
    meta( name: 'viewport', content: 'width=800,initial-scale=1' )
    title node.js knockout
    link( rel: 'stylesheet', href: '/stylesheets/application.css' )
    :text
      <script>_gaq = [['_setAccount', 'UA-16773586-1'], ['_trackPageview']];</script>
      <script async src="//www.google-analytics.com/ga.js"></script>
  body
    != body
    script( src: '//ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js' )
    - each s in [ 'socket.io.min', 'jquery.transform.light', 'jquery.keylisten.min', 'application' ]
      script( src: '/javascripts/' + s + '.js' )
    script
      $('a').live('mousedown', function() {
        var href = this.href;
        try {
          if (/^https?:/.test(href)) { _gaq.push([ '_trackPageview', href ]); }
        } catch(e) {}
      });
